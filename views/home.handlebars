<main>
    <div class="container">

    <h1 class="text-center my-3">All posts</h1>
    {{#if posts.length}}
    {{#each posts as |post|}}
    <div class="card my-3">
      <div class="card-body">
        <h3 class="card-title">Sample title</h3>
        <h4 class="card-subtitle mb-2 text-muted">Posted on</h4>
        <p class="card-text">Sample body</p>
      </div>
    </div>
    {{/each}}
    {{/if}}

    </div>
</main>